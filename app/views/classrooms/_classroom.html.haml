%tr
  %td= link_to classroom.subject.name, classroom_path(classroom)
  %td= link_to classroom.groups_names, classroom_path(classroom)
  %td
    - if can? :read, classroom
      = link_to classroom_path(classroom) do
        <i class='fa fa-folder-open' title='Exibir'></i>
    - if can? :edit, classroom
      = link_to edit_classroom_path(classroom) do
        <i class='fa fa-edit' title='Editar'></i>
