    %title Title
    %meta{ name: "description", content: "description" }
    %meta{ name: "keywords", content: "keywords" }
    %meta{ charset: 'utf-8'}
    = stylesheet_link_tag :application
    = yield :css
    = javascript_include_tag :application
    = csrf_meta_tag

    / = render 'layouts/shared/font_face'

  %body{ class: @namespace }
    .nav
      .nav-wrapper
        - if user_signed_in?
          = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout'
        - else
          .login
            = form_tag user_session_path do
              = text_field_tag 'user[email]', '', autofocus: true, placeholder: 'login'
              = password_field_tag 'user[password]', '', placeholder: 'senha'
              %input.primary{ type: 'submit', value: 'Login' }
          %a.logo{ href: '/' }

    %article
      = flash_messages
      = yield

    %footer
      .footer-wrapper
        .contact
          %img{ src: "#{image_path('home/logo-branco.png')}" }
          %p
            Rua Presidente Vargas 10.000, Subsolo C
            %br
            Cep: 20000-000 - Rio de Janeiro - RJ
            %br
            %br
            Email: contato@syschool.com.br
          .social
            %img{ src: "#{image_path('home/facebook-icon-brown.png')}" }
            %img{ src: "#{image_path('home/twitter-icon-brown.png')}" }
            %img{ src: "#{image_path('home/rss-icon-brown.png')}" }
            %img{ src: "#{image_path('home/google-icon-brown.png')}" }
        %form
          %label Lorem ipsum
          %br
          %br
          %input{ type: 'text', placeholder: 'nome' }
          %input{ type: 'text', placeholder: 'e-mail' }
          %textarea{ placeholder: 'mensagem' }
          %input.primary{ type: 'submit', value: 'Enviar' }

