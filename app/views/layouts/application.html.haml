%head
  %title Title

  %meta{ name: 'description', content: '' }
  %meta{ name: 'keywords', content: '' }
  %meta{ charset: 'utf-8'}
  %meta{ name: 'viewport', content: 'width=device-width,initial-scale=1' }
  -# Use the .htaccess and remove these lines to avoid edge case issues.  More info: h5bp.com/b/378
  %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1' }

  = javascript_include_tag 'modernizr.custom.js'
  = stylesheet_link_tag :application
  = csrf_meta_tag

%body{ class: @namespace }
  <!--[if lt IE 7]>
  <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
  <![endif]-->

  .nav
    .nav-wrapper
      - if user_signed_in?
        = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout'
      - else
        .login.invisible
          = form_tag user_session_path do
            = email_field_tag 'user[email]', '', autofocus: true, placeholder: 'email'
            = password_field_tag 'user[password]', '', placeholder: 'senha'
            %input.primary{ type: 'submit', value: 'Login' }
        %a.logo{ href: '/' }

  %article
    = flash_messages
    = yield

  #blocker{ onclick: 'Popup.close();' }
  #popup
    .main_popup

  %footer
    .footer-wrapper
      .contact
        %img{ src: "#{image_path('home/logo-branco.png')}" }
        %p
          Rua Presidente Vargas 10.000, Subsolo C
          %br
          Cep: 20000-000 - Rio de Janeiro - RJ
          %br
          %br
          Email: contato@syschool.com.br
        .social
          %img{ src: "#{image_path('home/facebook-icon-brown.png')}" }
          %img{ src: "#{image_path('home/twitter-icon-brown.png')}" }
          %img{ src: "#{image_path('home/rss-icon-brown.png')}" }
          %img{ src: "#{image_path('home/google-icon-brown.png')}" }
      = form_tag(send_contact_email_path, id: "footer_form") do
        = hidden_field_tag :plan, 'nenhum plano selecionado'
        %h2 Entre em contato
        = text_field_tag :name, '', placeholder: 'nome', required: true
        = email_field_tag :email, '', placeholder: 'e-mail', required: true
        = text_area_tag :message, '', placeholder: 'mensagem', required: true, data: { 'msg-required' => 'Informe suas dúvidas, perguntas e/ou sugestões' }
        = submit_tag 'Enviar', class: 'primary'

  = javascript_include_tag :application
  = yield :javascript

  :javascript
    $(document).ready(function() {
      $('#footer_form').validate();
    });

  -# Change UAXXXXXXXX1 to be your site's ID
  %script
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'});
</html>

