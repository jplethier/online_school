.box
  %p.title Altere a sua senha

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { validate: true }, class: 'body' }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token

    .field
      = f.label :password
      = f.password_field :password, required: true, minlength: 6

    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, required: true, equalto: '#user_password'

    .actions
      = f.submit 'Altere a minha senha', class: 'button primary'

    .clear
    = render 'devise/shared/links'
