.box
  %p.title Acesso Restrito

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { validate: true } }) do |f|
    .field
      = f.label :email
      = f.email_field :email, required: true, email: true, autofocus: true

    .field
      = f.label :password
      = f.password_field :password, required: true, minlength: 6

    - if devise_mapping.rememberable?
      .remember_me
        = f.check_box :remember_me
        = f.label :remember_me

    .actions
      = f.submit 'Entrar', class: 'button primary'

    .clear
    = render 'devise/shared/links'
